# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=conx CMDB
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Configuration Management Database

# Development Configuration
VITE_DEV_MODE=true
VITE_DEV_HOT_RELOAD=true
VITE_DEV_PORT=3000

# Feature Flags
VITE_ENABLE_GRAPH_VISUALIZATION=true
VITE_ENABLE_REAL_TIME_UPDATES=false
VITE_ENABLE_ADVANCED_SEARCH=true
VITE_ENABLE_EXPORT_FEATURES=false

# Security Configuration
VITE_ENABLE_CSP=true
VITE_CORS_ORIGIN=http://localhost:3000
VITE_COOKIE_DOMAIN=localhost
VITE_COOKIE_SECURE=false

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_RESPONSIVE_DESIGN=true
VITE_DEFAULT_LANGUAGE=en

# Graph Configuration
VITE_GRAPH_MAX_NODES=1000
VITE_GRAPH_MAX_EDGES=5000
VITE_GRAPH_DEFAULT_LAYOUT=force
VITE_GRAPH_ENABLE_PHYSICS=true

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
VITE_PAGE_SIZE_OPTIONS=[10,20,50,100]

# Cache Configuration
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=300000
VITE_ENABLE_OFFLINE_MODE=false

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.json,.csv,.xml
VITE_ENABLE_CHUNKED_UPLOADS=false
